			"defaultValue": "Ixia_BreakingPoint_Virtual_Controller_9.00.108",
			"type": "String"
		},
        "BpsSystemControllerVmSize": {
			"defaultValue": "Standard_F4s",
			"type": "String",
			"allowedValues": [
				"Standard_F4s",
				"Standard_F4s_v2"
			]
		},
		"BpsVirtualBlade1Eth0IpAddress": { 
			"defaultValue": "10.0.1.13",
			"type": "String"
		},
		"BpsVirtualBlade1Eth1IpAddresses": {
