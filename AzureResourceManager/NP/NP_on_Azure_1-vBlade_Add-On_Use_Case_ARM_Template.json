		"BpsVirtualBladeCreateOption": "FromImage",		
		"AdminUserName": "bpcloud",
		"AdminPassword": "Ixia1234!",
		"SshPublicKeyData": "ssh-rsa  rsa-key-20190515",
		"SshKeyPath": "[concat('/home/',variables('AdminUserName'),'/.ssh/authorized_keys')]"
